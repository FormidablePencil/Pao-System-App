{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es5", "es6", "dom", "dom.iterable"
  ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "module": "esnext",
    "target": "esnext",
    // "noImplicitAny": false,
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}